<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>mongo-hadoop</artifactId>
    <groupId>org.mongodb</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.mongodb</groupId>
  <artifactId>mongo-hadoop-streaming</artifactId>
  <name>MongoDB Hadoop Streaming Support</name>
  <version>1.0-SNAPSHOT</version>
  <url>http://github.com/mongodb/mongo-hadoop/streaming</url>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>1.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.mongodb.hadoop.streaming.MongoStreamJob</mainClass>
                </transformer>
              </transformers>
              <artifactSet>
                <excludes>
                  <exclude>org.eclipse.*</exclude>
                  <exclude>org.mortbay.jetty:*</exclude>
                  <exclude>tomcat:*</exclude>
                  <exclude>javax.servlet:*</exclude>
                  <exclude>ant:ant</exclude>
                  <exclude>net.java.dev.jets3t:jets3t</exclude>
                  <exclude>hsqldb:hsqldb</exclude>
                  <exclude>org.eclipse.jdt:*</exclude>
                </excludes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.specs2</groupId>
      <artifactId>specs2_2.9.1</artifactId>
      <version>1.7.1</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>specs2-scalaz-core_2.9.1</artifactId>
          <groupId>org.specs2</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
</project>

